---
import Layout from '../layouts/Layout.astro';
import Heading from '../components/Heading.svelte';
import store from '../store';

type Home = {
	id: string,
	heading: string
}

const session = store.openSession();

const {
	heading
} = await session.load<Home>("4da46935-a693-4a1c-beef-3e4d3c2ee46f") || {};

